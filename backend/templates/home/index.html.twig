{% extends 'base.html.twig' %}

{% block title %}Información de cliente{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Información de cliente</h1>

    <div class="data">
    {% for item in chats %}
        <p>Chat Id: {{item.id}} - Estado {% if item.completado %}Completado{% else %}Pendiente{%endif%}</p>
        {% for pregunta in item.chatPreguntas %}
            <div clas="pregunas">
                <p>Pregunta: {{pregunta.pregunta.titulo}} | {{pregunta.pregunta.descripcion}}
            </div>
            {% endfor %}    
        {% if item.completado %}
            Producto financiero recomendado:<br/>
            {{dump(item.recomendacion.producto)}}
        {%endif%}</p>
    {% endfor %}
    </div>
</div>
{% endblock %}
